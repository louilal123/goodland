RewriteEngine On

# Redirect all HTTP requests to HTTPS and www to non-www (optional)
RewriteCond %{HTTPS} off
RewriteRule ^ https://goodlandv2.com%{REQUEST_URI} [L,R=301]

# Optional: Redirect from www to non-www
RewriteCond %{HTTP_HOST} ^www\.goodlandv2\.com$ [NC]
RewriteRule ^ https://goodlandv2.com%{REQUEST_URI} [L,R=301]

# Remove .php extension from URLs (if needed)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Custom 404 error handling (internal redirect)
ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
