RewriteEngine On

# Redirect to the domain itself without www (if needed)
RewriteCond %{HTTP_HOST} ^goodlandv2\.com$ [NC]
RewriteRule ^(.*)$ http://goodlandv2.com/$1 [L,R=301]

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Custom 404 and 403 error handling (internal redirect)
ErrorDocument 404 /goodland/404.html
ErrorDocument 403 /goodland/404.html
